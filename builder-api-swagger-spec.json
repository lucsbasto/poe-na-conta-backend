{
  "openapi": "3.0.0",
  "paths": {
    "/customers": {
      "post": {
        "operationId": "CustomerController_create",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateCustomerDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Cliente criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ViewCustomerDto"
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos no corpo da requisição"
          },
          "422": {
            "description": "Erro de validação nos dados fornecidos"
          }
        },
        "summary": "Cria um novo cliente",
        "tags": [
          "Customer"
        ]
      },
      "get": {
        "operationId": "CustomerController_findAll",
        "parameters": [
          {
            "name": "id",
            "required": false,
            "in": "query",
            "description": "ID único do cliente",
            "schema": {
              "nullable": true,
              "example": "123e4567-e89b-12d3-a456-426614174000",
              "type": "string"
            }
          },
          {
            "name": "name",
            "required": false,
            "in": "query",
            "description": "Nome do cliente",
            "schema": {
              "nullable": true,
              "example": "Acme Corporation",
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de clientes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ViewCustomerDto"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos no corpo da requisição"
          },
          "422": {
            "description": "Erro de validação nos dados fornecidos"
          }
        },
        "summary": "Lista todos os clientes",
        "tags": [
          "Customer"
        ]
      }
    },
    "/users": {
      "post": {
        "operationId": "UserController_create",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ViewUserDto"
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos no corpo da requisição"
          },
          "422": {
            "description": "Erro de validação nos dados fornecidos"
          }
        },
        "summary": "Cria um novo usuário",
        "tags": [
          "Users"
        ]
      },
      "get": {
        "operationId": "UserController_findAll",
        "parameters": [
          {
            "name": "name",
            "required": false,
            "in": "query",
            "description": "Filtrar por nome do usuário",
            "schema": {
              "example": "jorge",
              "type": "string"
            }
          },
          {
            "name": "email",
            "required": false,
            "in": "query",
            "description": "Filtrar por e-mail do usuário",
            "schema": {
              "example": "jorge@email.com",
              "type": "string"
            }
          },
          {
            "name": "role",
            "required": false,
            "in": "query",
            "description": "Filtrar por perfil do usuário",
            "schema": {
              "example": "SELLER",
              "type": "string",
              "enum": [
                "ADMIN",
                "MANAGER",
                "SELLER"
              ]
            }
          },
          {
            "name": "customerId",
            "required": false,
            "in": "query",
            "description": "Filtrar por ID do cliente (customer)",
            "schema": {
              "example": "34ad503d-2141-464f-847d-aa567df64586",
              "type": "string"
            }
          },
          {
            "name": "id",
            "required": false,
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de clientes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ViewUserDto"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos no corpo da requisição"
          },
          "422": {
            "description": "Erro de validação nos dados fornecidos"
          }
        },
        "summary": "Lista todos os clientes",
        "tags": [
          "Users"
        ]
      }
    },
    "/auth/login": {
      "post": {
        "operationId": "AuthController_create",
        "parameters": [],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignInInputDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuário logado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SignInResponseDto"
                }
              }
            }
          },
          "400": {
            "description": "Dados inválidos no corpo da requisição"
          },
          "422": {
            "description": "Erro de validação nos dados fornecidos"
          }
        },
        "summary": "Realiza o login de um usuário",
        "tags": [
          "auth"
        ]
      }
    }
  },
  "info": {
    "title": "Põe na Conta API",
    "description": "This is the OpenAPI specification for Põe na Conta API",
    "version": "1.0",
    "contact": {}
  },
  "tags": [],
  "servers": [],
  "components": {
    "securitySchemes": {
      "bearer": {
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "type": "http"
      }
    },
    "schemas": {
      "CreateCustomerDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Acme Corporation",
            "description": "Nome do cliente"
          }
        },
        "required": [
          "name"
        ]
      },
      "ViewCustomerDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "123e4567-e89b-12d3-a456-426614174000",
            "description": "ID único do cliente"
          },
          "name": {
            "type": "string",
            "example": "Acme Corporation",
            "description": "Nome do cliente"
          },
          "createdAt": {
            "format": "date-time",
            "type": "string",
            "example": "2024-04-01T12:00:00Z",
            "description": "Data de criação"
          },
          "updatedAt": {
            "format": "date-time",
            "type": "string",
            "example": "2024-05-01T12:00:00Z",
            "description": "Data da última atualização"
          },
          "deletedAt": {
            "type": "object",
            "example": null,
            "description": "Data da exclusão (soft delete), ou null se não excluído",
            "nullable": true
          }
        },
        "required": [
          "id",
          "name",
          "createdAt",
          "updatedAt",
          "deletedAt"
        ]
      },
      "CreateUserDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "user@email.com",
            "description": "Email do usuário"
          },
          "password": {
            "type": "string",
            "example": "Senha@123",
            "description": "Senha do usuário (mínimo 6 caracteres)"
          },
          "role": {
            "type": "string",
            "example": "SELLER",
            "enum": [
              "ADMIN",
              "MANAGER",
              "SELLER"
            ],
            "description": "Perfil de acesso"
          },
          "customerId": {
            "type": "string",
            "example": "3507d8b5-ed0f-45bd-b2e1-7b539259069e",
            "description": "Id do customer"
          },
          "name": {
            "type": "string",
            "example": "Jorge Gustavo",
            "description": "Nome do usuário"
          }
        },
        "required": [
          "email",
          "password",
          "role",
          "customerId",
          "name"
        ]
      },
      "ViewUserDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "d27448f7-c8de-4d1a-95d2-1edff1a47277",
            "description": "ID do usuário"
          },
          "name": {
            "type": "string",
            "example": "Jorge Gustavo",
            "description": "Nome do usuário"
          },
          "email": {
            "type": "string",
            "example": "jorge@email.com",
            "description": "E-mail do usuário"
          },
          "role": {
            "type": "string",
            "example": "SELLER",
            "enum": [
              "ADMIN",
              "MANAGER",
              "SELLER"
            ],
            "description": "Perfil do usuário"
          },
          "customerId": {
            "type": "string",
            "example": "34ad503d-2141-464f-847d-aa567df64586",
            "description": "ID do cliente (customer)"
          },
          "createdAt": {
            "format": "date-time",
            "type": "string",
            "example": "2025-05-18T14:34:00.000Z",
            "description": "Data de criação"
          },
          "updatedAt": {
            "format": "date-time",
            "type": "string",
            "example": "2025-05-18T14:34:00.000Z",
            "description": "Data da última atualização"
          },
          "deletedAt": {
            "type": "object",
            "example": "2025-05-18T14:34:00.000Z",
            "description": "Data da última atualização",
            "nullable": true
          }
        },
        "required": [
          "id",
          "name",
          "email",
          "role",
          "customerId",
          "createdAt",
          "updatedAt",
          "deletedAt"
        ]
      },
      "SignInInputDto": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "user@email.com",
            "description": "Email do usuário"
          },
          "password": {
            "type": "string",
            "example": "Senha@123",
            "description": "Senha do usuário (mínimo 6 caracteres)"
          }
        },
        "required": [
          "email",
          "password"
        ]
      },
      "UserDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "1e9dfb8a-7152-4104-83ac-7723cc8ef258"
          },
          "email": {
            "type": "string",
            "example": "lucas@example.com"
          },
          "name": {
            "type": "string",
            "example": "Lucas Teste"
          },
          "role": {
            "type": "string",
            "enum": [
              "ADMIN",
              "MANAGER",
              "SELLER"
            ],
            "example": "ADMIN"
          },
          "customerId": {
            "type": "string",
            "example": "abc123"
          }
        },
        "required": [
          "id",
          "email",
          "name",
          "role",
          "customerId"
        ]
      },
      "SignInResponseDto": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string",
            "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxZTlkZmI4YS03MTUyLTQxMDQtODNhYy03NzIzY2M4ZWY3MjUiLCJlbWFpbCI6ImFkbWluQG1pbmVpcm8uY29tIiwibmFtZSI6IkFkbWluIiwicm9sZSI6IkFETUlOIiwiY3VzdG9tZXJJZCI6ImM0ZjQ2YzQwLTFkNzUtNGJiYy04OTJmLTBiZjI4ZGVhZmZmZSIsImlhdCI6MTc0NzY5Nzg5OCwiZXhwIjoxNzUwMjg5ODk4fQ.tuP1uRcABylfrTNwX7bwQ5gAp6rIpwpzoPdsDRx5Wos\"",
            "description": "Token de acesso do usuário"
          },
          "expiresIn": {
            "type": "number",
            "example": 3600,
            "description": "Tempo de expiração do token em segundos"
          },
          "user": {
            "description": "Informações do usuário",
            "allOf": [
              {
                "$ref": "#/components/schemas/UserDto"
              }
            ]
          }
        },
        "required": [
          "token",
          "expiresIn",
          "user"
        ]
      }
    }
  }
}