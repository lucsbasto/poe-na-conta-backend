{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./src/@types"],

    "strict": true,
    "skipLibCheck": true,

    "declaration": true,
    "sourceMap": true,
    "incremental": true,
    "removeComments": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "baseUrl": "./",
    "rootDir": ".",
    "outDir": "./dist",

    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*", "entity.ts"],
  "exclude": [
    "dist",
    "node_modules",
    "coverage",
    ".vscode",
    "packages"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
